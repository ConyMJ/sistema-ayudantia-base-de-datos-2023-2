<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg 
shadow-lg text-gray-700">
  <h1 class="text-3xl m-16 font-bold text-center"> Acceder </h1>

  <form action="" method="POST" class="nt-4">

    <input type="rut" name="rut" placeholder="rut"
    class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
    bg-gray-200 focus:bg-white" required>

    <input type="password" name="password" placeholder="password"
    class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
    bg-gray-200 focus:bg-white" required>

    <button type="submit" class="rounded-md bg-purple-500 w-full text-lg text-white
    font-semibold p-2 my-3 hover:bg-purple-600 focus:bg-purple-700">Enviar</button>

    {{#if error}}
      <p class="text-red-300 font-bold text-lg my-3">*{{error}}</p>
    {{/if}}
  </form>

</div>